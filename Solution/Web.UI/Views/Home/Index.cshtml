@model List<TextAnalysis.SmsRenderModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
	<head>
			<meta name="viewport" content="width=device-width"/>

			<link rel="stylesheet"type="text/css" href="../_build/styles/main.css"/>
			<link type="text/css" rel="stylesheet" href="https://viewing.api.autodesk.com/viewingservice/v1/viewers/style.css?v=v1.2.15"/>
			<link href='https://fonts.googleapis.com/css?family=Cabin:600' rel='stylesheet' type='text/css'>

			<title>|_0_|</title>
	</head>

	<body>

	<header class="header">

	    <h1>Chars in their eyes</h1>
	    <div data-close-btn class="close-btn u-display--none"></div>

	</header>
        @foreach (var renderModel in Model)
        {
            Html.Raw(renderModel.Sms.FromNumber);
        }

			<div class="grid">

					<div class="grid__strip">
							<div data-grid-item class="grid__item">

								<picture>
									<img data-thumbnail class="grid__item-image" src="http://7-themes.com/data_images/out/2/6775415-beautiful-images.jpg" />
								</picture>

								<div class="button" data-load-model="urn:dXJuOmFkc2sub2JqZWN0czpvcy5vYmplY3Q6ZGV2YnVja2V0L0RyaWxsLmR3Zng="></div>

								<div class="container">
									<div class="row fill">
											<div class="col-lg-12 fill ">
													<div data-autodesk-view id="viewer"></div>
											</div>
									</div>
								</div>

							</div>
							<div class="grid__item grid__item--large"></div>
					</div>

					<div class="grid__strip">
							<div class="grid__item grid__item--large"></div>
							<div class="grid__item"></div>
					</div>

					<div class="grid__strip">
							<div class="grid__item"></div>
							<div class="grid__item grid__item--large"></div>
					</div>
			</div>

			<div data-overlay-bg class="overlay-bg u-display--none"></div>

			<script src="../_build/scripts/jquery-1.11.3.min.js"></script>
			<script type="text/javascript" src="https://developer.api.autodesk.com/viewingservice/v1/viewers/three.min.js?v=v1.2.15"></script>
			<script type="text/javascript" src="https://developer.api.autodesk.com/viewingservice/v1/viewers/viewer3D.min.js?v=v1.2.15"></script>
			<script src="../_build/scripts/BasicExtension.js"></script>
			<script src="../_build/scripts/Viewer.js"></script>
			<script src="../_build/scripts/overlay.js"></script>
	        <script src="../_build/scripts/setThumbnailHeight.js"></script>

            <!--Script references. -->
            <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
            <!--Reference the SignalR library. -->
            <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
            <!--Reference the autogenerated SignalR hub script. -->
            <script src="~/signalr/hubs"></script>
            <!--SignalR script to update the chat page and send messages.-->
            <script>
        $(function () {
            var smsRenderHub = $.connection.smsRenderHub;

            smsRenderHub.client.addNewSmsRenders = function (renderModel) {
                console.log(renderModel);
            };

            $.connection.hub.start().done(function () {
                smsRenderHub.server.sendNewSmsRenders();
            });
        });

            </script>


	</body>
</html>
